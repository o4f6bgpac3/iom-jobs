# Cloudflare Worker Configuration
# Copy this file to wrangler.toml and fill in your resource IDs

name = "iom-job-scraper"
main = "worker.js"
compatibility_date = "2024-12-01"

# D1 Database binding
# Create with: wrangler d1 create iom-jobs
[[d1_databases]]
binding = "DB"
database_name = "iom-jobs"
database_id = "YOUR_D1_DATABASE_ID"

# KV namespace for rate limiting
# Create with: wrangler kv:namespace create RATE_LIMITER
[[kv_namespaces]]
binding = "RATE_LIMITER"
id = "YOUR_KV_NAMESPACE_ID"

# Scheduled cron triggers - run daily at 06:00 UTC
[triggers]
crons = ["0 6 * * *"]

[observability]
enabled = true
